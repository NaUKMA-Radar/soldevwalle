{
  "manifest_version": 3,
  "name": "Solana Dev Wallet Ext",
  "version": "1.0.0",
  "description": "Browser extension for monitoring Solana stats",
  "icons": {
    "16": "./logo192.png",
    "48": "./logo192.png",
    "128": "./logo192.png"
  },
  "background": {
    "type": "module",
    "service_worker": "static/js/background.js"

  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["static/js/content.js"]
  }
]
,
  "action": {
    "default_popup": "./index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ]
}